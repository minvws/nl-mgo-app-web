{
    "$schema": "https://json.schemastore.org/prettierrc",
    "printWidth": 100,
    "useTabs": false,
    "tabWidth": 4,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "overrides": [
        {
            "files": [".github/*.yml", ".github/**/*.yml"],
            "options": {
                "tabWidth": 2
            }
        }
    ],
    "plugins": ["prettier-plugin-tailwindcss"],
    "tailwindFunctions": ["tw"]
}
