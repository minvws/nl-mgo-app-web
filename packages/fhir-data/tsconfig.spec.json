{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "tsBuildInfoFile": "./out-tsc/vitest/tsconfig.lib.tsbuildinfo",
        "emitDeclarationOnly": false,
        "outDir": "./out-tsc/vitest",
        "types": ["vitest/globals", "vitest/importMeta", "vitest"],
        "paths": {
            "$test": ["./test/index.ts"],
            "$test/*": ["./test/*"]
        }
    },
    "include": [
        "resource-labels/**/*.ts",
        "schema-generator/**/*.ts",
        "vitest.config.ts",
        "src/**/*.test.ts",
        "src/**/*.d.ts",
        "test/**/*.ts",
        "test/**/*.d.ts",
        "src/**/*.json"
    ],
    "exclude": ["src/**/*.snap.json"],
    "references": [
        {
            "path": "./tsconfig.lib.json"
        }
    ]
}
