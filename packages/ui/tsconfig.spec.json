{
    "extends": "../../tsconfig.base.vite.json",
    "compilerOptions": {
        "outDir": "../../out-tsc/mgo-ui/vitest",
        "tsBuildInfoFile": "../../out-tsc/mgo-ui/tsconfig.spec.tsbuildinfo",
        "emitDeclarationOnly": false,
        "types": ["vitest-dom/extend-expect", "vitest/globals", "vitest/importMeta", "vitest"],
        "jsx": "react-jsx",
        "lib": ["dom"],
        "allowJs": true
    },
    "include": [
        "vite.config.ts",
        "vitest.config.ts",
        "src/**/*.test.ts",
        "src/**/*.test.tsx",
        "src/**/*.d.ts",
        "test/**/*.ts",
        "test/**/*.tsx",
        "test/**/*.d.ts",
        "docs/**/*.ts",
        "docs/**/*.tsx",
        "docs/**/*.d.ts"
    ],
    "references": [
        {
            "path": "./tsconfig.lib.json"
        }
    ]
}
